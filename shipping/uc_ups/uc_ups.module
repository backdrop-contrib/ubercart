/**
 * Callback for usort().
 *
 * Sorts service rates by increasing price.
 */
function _uc_ups_sort_quotes($a, $b){
  $ar = $a['rate'];
  $br = $b['rate'];
  if ($ar == $br){
    return 0;
  }
  else{
    return ($ar < $br) ? -1 : 1;
  }
}
