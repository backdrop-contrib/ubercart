}

function uc_usps_form_alter($form_id, &$form){
  $node = $form['#node'];
  $product_types = uc_product_node_info();
  if (is_object($node) && $form_id == $node->type .'_node_form' && isset($product_types[$node->type])){
    $enabled = variable_get('uc_quote_enabled', array('usps' => true));
    $usps = array('#type' => 'fieldset',
      '#title' => t('USPS Product Description'),
      '#collapsible' => true,
      '#collapsed' => ($enabled['usps'] == false || uc_product_get_shipping_type($node) != 'small_package'),
      '#weight' => 2,
      '#tree' => true,
    );
    $usps['container'] = array('#type' => 'select',
      '#title' => t('Package Type'),
      '#options' => _uc_usps_pkg_types(),
      '#default_value' => $node->usps['container'] ? $node->usps['container'] : 0,
    );
    $usps['qty'] = array('#type' => 'textfield',
      '#title' => t('Package Quantity'),
      '#default_value' => $node->usps['qty'] ? $node->usps['qty'] : 1,
      '#description' => t('For a package containing only this product, how many are in it?'),
    );
    $usps['dimensions'] = array('#type' => 'fieldset',
      '#title' => t('Dimensions'),
      '#description' => t('Physical dimensions of the packaged product.'),
      '#theme' => 'uc_usps_dimensions',
    );
    $usps['dimensions']['units'] = array('#type' => 'select',
      '#title' => t('Units of measurement'),
      '#options' => array(
        'in' => t('Inches'),
        'cm' => t('Centimeters'),
      ),
      '#default_value' => $node->usps ? $node->usps['units'] : variable_get('uc_store_length_unit', 'in'),
    );
    $usps['dimensions']['length'] = array('#type' => 'textfield',
      '#title' => t('Length'),
      '#default_value' => $node->usps['length'],
    );
    $usps['dimensions']['width'] = array('#type' => 'textfield',
      '#title' => t('Width'),
      '#default_value' => $node->usps['width'],
    );
    $usps['dimensions']['height'] = array('#type' => 'textfield',
      '#title' => t('Height'),
      '#default_value' => $node->usps['height'],
    );
    
    $form['shipping']['usps'] = $usps;
  }
}

/**
 * Theme function for uc_usps_form_alter().
 */
function theme_uc_usps_dimensions($form){
  $output = '';
  $row = array();
  foreach (element_children($form) as $dimension){
    $row[] = drupal_render($form[$dimension]);
  }
  $output .= theme('table', array(), array($row));
  return $output;
}

/**
 * Implementation of hook_nodeapi().
 */
function uc_usps_nodeapi(&$node, $op){
  switch ($op){
    case 'insert':
    case 'update':
      if (isset($node->usps)){
        $usps_values = $node->usps;
        db_query("DELETE FROM {uc_usps_products} WHERE nid = %d", $node->nid);
        db_query("INSERT INTO {uc_usps_products} (nid, container, qty, length, width, height, units) VALUES (%d, '%s', %d, %f, %f, %f, '%s')",
          $node->nid, $usps_values['container'], $usps_values['qty'], $usps_values['dimensions']['length'], $usps_values['dimensions']['width'], $usps_values['dimensions']['height'], $usps_values['dimensions']['units']);
      }
    break;
    case 'load':
      if (uc_product_get_shipping_type($node) == 'small_package'){
        return array('usps' => db_fetch_array(db_query("SELECT * FROM {uc_usps_products} WHERE nid = %d", $node->nid)));
      }
    break;
    case 'delete':
      db_query("DELETE FROM {uc_usps_products} WHERE nid = %d", $node->nid);
    break;
  }
}

