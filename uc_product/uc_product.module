function uc_product_is_product($node){
  if (is_object($node)){
    $type = $node->type;
  }
  elseif (is_array($node)){
    $type = $node['type'];
  }
  elseif (is_string($node)){
    $type = $node;
  }
  
  if (!$type){
    return false;
  }
  
  $types = uc_product_node_info();
  return isset($types[$type]);
}

