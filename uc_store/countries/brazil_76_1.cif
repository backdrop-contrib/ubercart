    ."(%d, 76, 'SP', 'São Paulo'),"
    ."(%d, 76, 'SE', 'Sergipe'),"
    ."(%d, 76, 'TO', 'Tocantins')", uc_get_zone_ids(27));

  uc_set_address_format(76, "!company\r\n!first_name !last_name\r\n!street1\r\n!street2"
                           ."\r\n!city, !postal_code\r\n!zone_name, !country_name");
