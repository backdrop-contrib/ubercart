    ."(%d, 76, 'AC', 'Acre'),"
    ."(%d, 76, 'AL', 'Alagoas'),"
    ."(%d, 76, 'AP', 'Amapá'),"
    ."(%d, 76, 'AM', 'Amazonas'),"
    ."(%d, 76, 'BA', 'Bahia'),"
    ."(%d, 76, 'CE', 'Ceará'),"
    ."(%d, 76, 'DF', 'Distrito Federal'),"
    ."(%d, 76, 'ES', 'Espírito Santo'),"
    ."(%d, 76, 'GO', 'Goiás'),"
    ."(%d, 76, 'MA', 'Maranhão'),"
    ."(%d, 76, 'MT', 'Mato Grosso'),"
    ."(%d, 76, 'MS', 'Mato Grosso do Sul'),"
    ."(%d, 76, 'MG', 'Minas Gerais'),"
    ."(%d, 76, 'PA', 'Pará'),"
    ."(%d, 76, 'PB', 'Paraíba'),"
    ."(%d, 76, 'PR', 'Paraná'),"
    ."(%d, 76, 'PE', 'Pernambuco'),"
    ."(%d, 76, 'PI', 'Piauí'),"
    ."(%d, 76, 'RJ', 'Rio de Janeiro'),"
