      $data['title']['cell'] = drupal_render($form['products'][$product]['title']);
      $data['model']['cell'] = drupal_render($form['products'][$product]['model']);
      $data['weight']['cell'] = drupal_render($form['products'][$product]['weight']);
      $data['cost']['cell'] = drupal_render($form['products'][$product]['cost']);
      $data['price']['cell'] = drupal_render($form['products'][$product]['price']);
      $table['rows'][] = $data;
    }
  }
  else {
    $data['remove']['cell'] = array('data' => t('This order contains no products.'), 'colspan' => count($fields));
    $table['rows'][] = $data;
  }

  $attributes = array('class' => 'order-pane-table');

  $form['table'] = array(
    '#value' => $table,
    '#theme' => 'tapir_table',
    '#attributes' => $attributes,
  );
  return $form;
