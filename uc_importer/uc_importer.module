function taxonomy_uc_import_product($product, $product_xml, $store, $id_map){
  if (isset($product_xml->vocabularies)){
    foreach ($product_xml->vocabularies->taxonomy as $taxonomy){
      // Whats so "simple" about it? Why no getAttribute('id') ?!?!?
      $attrs = $taxonomy->attributes();
      $vid = (string) $attrs['id'];

      $query = db_query('SELECT tid, name FROM {term_data} WHERE vid = %d', $vid);
      while ($row = db_fetch_object($query)){
        $vocab[$row->tid] = $row->name;
      }

      foreach ($taxonomy->term as $xml_value){
        $found = false;
        foreach ($vocab as $tid => $name){
          if ($name == (string) $xml_value){
            $terms[] = $tid;
            $found = true;
          }
        }
        
        if (!$found){
          $tid = db_next_id('{term_data}_tid');
          db_query("INSERT INTO {term_data} (tid, name, vid) VALUES (%d, '%s', %d)", $tid, (string) $xml_value, $vid);
          db_query("INSERT INTO {term_hierarchy} (tid, parent) VALUES (%d, %d)", $tid, '0');
          $terms[] = $tid;
        }
      }
      taxonomy_node_save($product->nid, $terms);
    }
  }
}
