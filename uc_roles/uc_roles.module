function uc_roles_feature_form_validate($form_id, $form_values) {
	if ($form_values['uc_roles_granularity'] != 'never' && intval($form_values['uc_roles_qty']) < 1) {
		form_set_error('uc_roles_qty',t('The amount of time must be a positive integer.'));
	}
	if (empty($form_values['uc_roles_role'])) {
		form_set_error('uc_roles_role',t('You must have a role to assign. You may need to ').l(t('create a new role'),'admin/user/roles').t(' or perhaps ').l(t('set role assignment defaults'),'admin/store/settings/products/edit/features').'.');
	}
	if ($product_roles = db_fetch_object(db_query("SELECT * FROM {uc_roles_products} WHERE nid = %d AND model = '%s' AND rid = %d",$form_values['nid'],$form_values['uc_roles_model'],$form_values['uc_roles_role'])) && 
			$form_values['pfid'] == 0) {
		form_set_error('uc_roles_role',t('The combination of model/SKU and role already exists for this product.'));
		form_set_error('uc_roles_model',t(' '));
	}
}
function uc_roles_feature_form_submit($form_id, $form_values) {
	$description = (empty($form_values['uc_roles_model'])) ? t('When product ') : t('When product model !sku',array('!sku' => $form_values['uc_roles_model']));
	$description .=  t(' is purchased grant !role_name role', array('!role_name' => _get_role_name($form_values['uc_roles_role'])));
	switch ($form_values['uc_roles_granularity']) {
		case 'never':
			$description .= ".";
			$finished = TRUE;
			break;
		case 'day':
			$description .= t(' for !qty day', array('!qty' => $form_values['uc_roles_qty']));
			break;
		case 'week':
			$description .= t(' for !qty week', array('!qty' => $form_values['uc_roles_qty']));
			break;
		case 'month':
			$description .= t(' for !qty month', array('!qty' => $form_values['uc_roles_qty']));
			break;
		case 'year':
			$description .= t(' for !qty year', array('!qty' => $form_values['uc_roles_qty']));
			break;
		default:
			break;
	}
	if ($form_values['uc_roles_qty'] > 1 && !$finished) {
		$description .= 's.';
	}
	elseif (!$finished) {
		$description .= '.';
	}
	$description .= ($form_values['uc_roles_shippable']) ? t(' (Shippable: Yes)') : t(' (Shippable: No)');
	
	//Insert or update uc_roles_products table
	if ($form_values['pfid'] == 0) {
		$pfid = db_next_id('{uc_product_features}_pfid') + 1;
		db_query("INSERT INTO {uc_roles_products} (pfid, nid, rid) VALUES (%d, %d, %d)",$pfid,$form_values['nid'],$form_values['uc_roles_role']);
	}
	else {
		$pfid = $form_values['pfid'];
		db_query("UPDATE {uc_roles_products} SET rid = %d WHERE pfid = %d",$form_values['uc_roles_role'],$pfid);
	}
	if (is_null($form_values['uc_roles_model'])) {
		db_query("UPDATE {uc_roles_products} SET model = NULL WHERE pfid = %d",$pfid);
	}
	else {
		db_query("UPDATE {uc_roles_products} SET model = '%s' WHERE pfid = %d",$form_values['uc_roles_model'],$pfid);
	}
	if ($form_values['uc_roles_granularity'] == 'never') {
		db_query("UPDATE {uc_roles_products} SET duration = NULL, granularity = NULL WHERE pfid = %d",$pfid);
	}
	else {
		db_query("UPDATE {uc_roles_products} SET duration = %d, granularity = '%s' WHERE pfid = %d",$form_values['uc_roles_qty'],$form_values['uc_roles_granularity'],$pfid);
	}
	if ($form_values['uc_roles_shippable']) {
		db_query("UPDATE {uc_roles_products} SET shippable = 1 WHERE pfid = %d",$pfid);
	}
	else {
		db_query("UPDATE {uc_roles_products} SET shippable = 0 WHERE pfid = %d",$pfid);
	}
	
	$data = array(
		'pfid' => $pfid,
		'nid' => $form_values['nid'],
		'fid' => 'role',
		'description' => $description,
	);
	
  return uc_product_feature_save($data);
}

