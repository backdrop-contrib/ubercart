/**
 * Form to change the category of many nodes at once.
 */
function uc_catalog_set_category_form(){
  $form['selector'] = array('#type' => 'markup',
    '#value' => '<input type="button" value="'. t('Select Products') .'" id="edit-selector" />',
    '#suffix' => '<div id="category-selector"></div><div id="selected-nodes"></div>',
  );
  drupal_add_js('
    $(document).ready(function(){  
        $.post("'. base_path() .'?q=ubrowser/main",
          { vid: "'. variable_get('uc_catalog_vid', 0) .'",
            nids: "true",
            search: "true",
            close: "true",
            div: "category-selector",
            select: "set_category",
            multi: "true",
          },
          function(contents){
            $("#category-selector").empty().append(contents);
          }
        )
      $("#edit-selector").click(function(){
        $("#category-selector").show()
      })
    })
    
    var sel_nids
    var sel_titles
      
    function set_category(){
      $("#uc_catalog_set_category_form > div > input[@name^=nids]").remove()
      $("#selected-nodes").empty()
      sel_nids = new Array()
      sel_titles = new Array()
      $("#edit-unid option").each(function(){
        if($(this).val() != 0 && $(this).get(0).selected){
          sel_nids.push($(this).val())
          sel_titles.push($(this).text())
          $("#uc_catalog_set_category_form > div").append(\'<input type="hidden" name="nids[]" value="\' + $(this).val() + \'" />\')
        }
      })
      $("#selected-nodes").append("<ul>\n")
      for (val in sel_titles){
        $("#selected-nodes").append("<li>" + sel_titles[val] + "</li>\n")
      }
      $("#selected-nodes").append("</ul>\n")
      $("#category-selector").hide()
    }
  ', 'inline');

  $form['categories'] = taxonomy_form(variable_get('uc_catalog_vid', 0));
  $form['categories']['#title'] = t('New Category');
  unset($form['categories']['#weight']);
  $form['move'] = array('#type' => 'submit',
    '#value' => t('Move'),
  );
  $form['copy'] = array('#type' => 'submit',
    '#value' => t('Copy'),
  );
  
  return $form;
}

/**
 * Submit function for uc_catalog_set_category_form().
 */
function uc_catalog_set_category_form_submit($form_id, $form_values){
  $categories = $_POST['categories'];
  $catalog_vid = variable_get('uc_catalog_vid', 0);
  foreach($_POST['nids'] as $nid){
    // Preserve terms already associated with this product.
    $terms = taxonomy_node_get_terms($nid);
    foreach ($terms as $term){
      // Don't preserve those from the catalog if products are being moved.
      if ($_POST['op'] == t('Move') && $term->vid == $catalog_vid){
        continue;
      }
      $categories[] = $term->tid;
    }
    taxonomy_node_save($nid, array_unique($categories));
  }
}

/**
 * Catalog taxonomy browser.
 *
 * URL is of the form 'catalog/category_name'.
 * The breadcrumb provides links to all ancestry paths to the current term.
 * A table of links provides access to the immediate children and grandchildren.
 * 
 * Inspired by taxonomy_term_page().
 *
 * @return
 *   A Drupal page providing links to products in this category, and nearby categories.
 */
function uc_catalog_browse(){
  drupal_add_css(drupal_get_path('module', 'uc_catalog') .'/uc_catalog.css');
    
  $args = func_get_args();
  $term = null;
  $tree = null;
  $terms = taxonomy_get_term_by_name(str_replace('_', ' ', $args[0]));
  $catalog_id = variable_get('uc_catalog_vid', 0);
  foreach ($terms as $test){
    if ($catalog_id == $test->vid){
      $term = $test;
    }
  }
  if ($term){
    $tid = $term->tid;
    $vid = $term->vid;
    $name = $term->name;
  }
  else{
    $tid = 0;
    $vid = $catalog_id;
    $name = t('Catalog');
  }
  drupal_set_title($name);
  uc_catalog_set_breadcrumb($tid);
  $children = taxonomy_get_children($tid, $vid);
  $output = '';
  //$output .= '<pre>'. print_r($parents, true) .'</pre>';
  //$output .= '<pre>'. print_r($children, true) .'</pre>';
  $types = uc_catalog_node_types();
  $links = array();
  $child_list = array();
  foreach ($children as $child){
    $n = 0;
    foreach ($types as $type){
      $n += taxonomy_term_count_nodes($child->tid, $type);
    }
    if ($n){
      $links[] = array('title' => $child->name .' ('. $n .')', 'href' => 'catalog/'. str_replace(' ', '_', strtolower($child->name)),
        'attributes' => array('rel' => 'tag'),
      );
    }
    // Display child category's image.
    if (module_exists('imagecache') && $file = uc_catalog_image_load($child->tid)){
      $imagecache_path =  file_create_url(file_directory_path() .'/imagecache/catalog/'. $file->filepath);
      $info = image_get_info($imagecache_path);
      $image = '<div style="height: '. $info['height'] .'px; width: '. $info['width'] .'px;">';
      $image .= l(theme('imagecache', 'catalog', $file->filepath), uc_catalog_term_path($child), array(), null, null, false, true);
      $image .= '</div>';
    }
    else{
      $image = '';
    }
    /* if (module_exists('image')){
      $images = image_get_random(1, $child->tid);
      $size = _image_get_dimensions('thumbnail');
      $image = '<div style="height: '. $size['height'] .'px; width: '. $size['width'] .'px;">';
      if (count($images)){
        $image .= l(image_display($images[0], 'thumbnail', array('alt' => check_plain($images[0]->title), 'title' => check_plain($images[0]->title))), uc_catalog_term_path($child), array(), null, null, false, true);
      }
      $image .= '</div>';
    }
    else{
      $image = '';
    } */
    // Display list of child category's children categories.
    // If more than $max_gc_display, show "More..." link to child.
    $grandchildren_list = taxonomy_get_children($child->tid, $vid);
    $grandchildren = array();
    $j = 0;
    $max_gc_display = 3;
    foreach ($grandchildren_list as $i => $grandchild){
      if ($j >= $max_gc_display){
        break;
      }
      $g_child_nodes = 0;
      foreach ($types as $type){
        $g_child_nodes += taxonomy_term_count_nodes($grandchild->tid, $type);
      }
      if ($g_child_nodes){
        $grandchildren[$i] = l($grandchild->name, uc_catalog_term_path($grandchild));
        $j++;
      }
    }
    //$grandchildren = array_slice($grandchildren, 0, intval(count($grandchildren) / 2) + 1, true);
    if ($j > $max_gc_display){
      array_push($grandchildren, l('More...', uc_catalog_term_path($child)));
    }
    if ($n){
      $child_list[] = $image .'<br/><strong>'. l($child->name, uc_catalog_term_path($child)) .'</strong>'
        ."<br/><span>"
        . implode(', ', $grandchildren) ."</span>\n";
    }
  }
  /* if (module_exists('image') && $tid){
    $images = image_get_random(1, $tid);
    if (count($images)){
      $output .= image_display($images[0], 'category', array('alt' => check_plain($image->title), 'title' => check_plain($image->title)));
    }
    elseif (user_access('create images')){
      $size = _image_get_dimensions('category');
      $output .= '<div style="height: '. $size['height'] .'px; width: '. $size['width'] .'px; float: right;">';
      $output .= l('Add an image', 'category/add/image/'. $tid);
      $output .= "</div>\n";
    }
  } */
  //$node_resource = taxonomy_select_nodes(array($tid));
  $table_args = array('tid' => $tid, 'attributes' => array('class' => 'category-products'));
  $product_table = tapir_get_table('uc_product_table', $table_args);
  if (strpos($product_table, "<tbody>\n</tbody>") === false){ // If product table is not empty.
    if (count($links)){
      $output .= '>> ' . theme('links', $links, array('class' => 'links inline'));
    }
    $output .= $product_table;
    $output .= theme('pager');
  }
  else{
    // Display table of child categories similar to an osCommerce site's front page.
    $columns = 3; // could extract this number to a user-defined field
    $cat_rows = array();
    $row = array();
    $i = 1;
    foreach ($child_list as $cell){
      $row[] = array('data' => $cell, 'class' => 'category');
      if ($i % $columns == 0){
        $cat_rows[] = $row;
        $row = array();
      }
      $i++;
    }
    if (count($row) > 0 && count($row) < $columns){
      if (count($cat_rows) >= 1){
        $row = array_merge($row, array_fill(count($row), $columns - count($row), array('data' => '&nbsp;', 'class' => 'category')));
      }
      $cat_rows[] = $row;
    }
    $output .= theme('table', array(), $cat_rows, array('class' => 'category'));
  }
  return $output;
}

