  }

  $form['update'] = array(
    '#type' => 'submit',
    '#submit' => array('uc_cart_view_form_update_submit'),
    '#value' => t('Update cart'),
  );
  if (variable_get('uc_checkout_enabled', TRUE)) {
    $form['checkout'] = array(
      '#type' => 'submit',
      '#value' => t('Checkout'),
    );
  }

  return $form;
}

