function uc_cart_enable() {
  if (module_exists('imagecache')) {
    $result = db_query("SELECT presetid FROM {imagecache_preset} WHERE presetname = 'cart'");
    if (!db_fetch_object($result)) {
      db_query("INSERT INTO {imagecache_preset} (presetname) VALUES ('cart')");
      $id = db_last_insert_id('imagecache_preset', 'presetid');
      db_query("INSERT INTO {imagecache_action} (presetid, weight, data) VALUES (%d, 0, '%s')", $id, 'a:4:{s:8:"function";s:5:"scale";s:3:"fit";s:6:"inside";s:5:"width";s:2:"50";s:6:"height";s:2:"50";}');
      cache_clear_all('imagecache:presets', 'cache');
    }
  }
}

