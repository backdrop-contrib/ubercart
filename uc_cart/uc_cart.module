/**
 * Adds a continue button to a pane.
 */
function uc_cart_checkout_next_button($pane_id, $next) {
  if ($next === FALSE || variable_get('uc_use_next_buttons', FALSE) == FALSE) {
    return NULL;
  }

  $element = array(
    '#type' => 'button',
    '#value' => variable_get('uc_checkout_next_button', t('Next')),
